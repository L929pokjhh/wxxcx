/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局样式 */
page {
  background: linear-gradient(180deg, #87CEEB 0%, #98FB98 50%, #87CEEB 100%);
  min-height: 100vh;
}

.btn-primary {
  background-color: #5DADE2;
  color: white;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.btn-secondary {
  background-color: #BDC3C7;
  color: #2C3E50;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.form-input {
  background-color: white;
  border-radius: 25rpx;
  padding: 20rpx 30rpx;
  margin: 10rpx 0;
  border: none;
  font-size: 28rpx;
}

.required::after {
  content: "*";
  color: red;
  margin-left: 5rpx;
}
