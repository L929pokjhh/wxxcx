/* pages/investment and financing.wxss */
.container {
    background-color: #f5f5f5;
    min-height: 100vh;
    padding: 20rpx;
    box-sizing: border-box;
  }
  
  /* 头部样式 */
  .header {
    background: linear-gradient(135deg, #87CEEB, #87CEEB);
    color: white;
    padding: 30rpx;
    border-radius: 16rpx;
    text-align: center;
    margin-bottom: 30rpx;
  }
  
  .header .title {
    font-size: 36rpx;
    font-weight: 600;
    margin-bottom: 10rpx;
  }
  
  .header .date {
    font-size: 26rpx;
    opacity: 0.9;
  }
  
  /* 部分样式 */
  .section {
    background-color: white;
    border-radius: 16rpx;
    margin-bottom: 30rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: 600;
    margin-bottom: 20rpx;
    color: #87CEEB;
    display: flex;
    align-items: center;
  }
  
  .section-title::before {
    content: "";
    display: inline-block;
    width: 8rpx;
    height: 32rpx;
    background-color: #87CEEB;
    margin-right: 15rpx;
    border-radius: 4rpx;
  }
  
  /* 表格样式 */
  .table {
    width: 100%;
    border: 2rpx solid #e0e0e0;
    border-radius: 12rpx;
    overflow: hidden;
  }
  
  .table-header {
    display: flex;
    background-color: #f9f9f9;
    border-bottom: 2rpx solid #e0e0e0;
    font-weight: 600;
  }
  
  .table-row {
    display: flex;
    border-bottom: 2rpx solid #e0e0e0;
  }
  
  .table-row:last-child {
    border-bottom: none;
  }
  
  .col-1, .col-2, .col-3 {
    padding: 20rpx 15rpx;
    word-break: break-all;
  }
  
  .col-1 {
    width: 15%;
    text-align: center;
    background-color: #f9f9f9;
    border-right: 2rpx solid #e0e0e0;
  }
  
  .col-2 {
    width: 70%;
    border-right: 2rpx solid #e0e0e0;
  }
  
  .col-3 {
    width: 15%;
    text-align: center;
  }
  
  /* 联系我们按钮样式 */
  .contact-section {
    position: fixed;
    bottom: 40rpx;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 0 40rpx;
  }

  .contact-btn {
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    color: #ffffff;
    border: none;
    border-radius: 50rpx;
    padding: 24rpx 60rpx;
    font-size: 32rpx;
    font-weight: bold;
    box-shadow: 0 8rpx 25rpx rgba(79, 172, 254, 0.3);
    transition: all 0.3s ease;
  }

  .contact-btn:active {
    transform: translateY(2rpx) scale(0.98);
    box-shadow: 0 4rpx 15rpx rgba(79, 172, 254, 0.2);
  }

  /* 页脚样式 */
  .footer {
    text-align: center;
    padding: 30rpx;
    color: #999;
    font-size: 24rpx;
    margin-top: 20rpx;
    margin-bottom: 120rpx;
  }
  
  /* 响应式设计 */
  @media (max-width: 750rpx) {
    .container {
      padding: 10rpx;
    }
    
    .section {
      padding: 20rpx;
    }
    
    .col-1, .col-2, .col-3 {
      padding: 15rpx 10rpx;
      font-size: 26rpx;
    }
    
    .header .title {
      font-size: 32rpx;
    }
    
    .section-title {
      font-size: 30rpx;
    }
  }