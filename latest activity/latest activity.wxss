/* 页面样式 */
.container {
    padding: 30rpx;
    min-height: 100vh;
    background: linear-gradient(180deg, #87CEEB 0%, #98FB98 50%, #87CEEB 100%);
  }
  

  

  
  /* 弹框样式 */
  .modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s;
  }
  
  .modal-mask.active {
    opacity: 1;
    visibility: visible;
  }
  
  .modal-content {
    width: 85%;
    max-width: 600rpx;
    background-color: white;
    border-radius: 24rpx;
    overflow: hidden;
    transform: scale(0.7) translate(-50%, -50%);
    transition: transform 0.3s;
    box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
    position: absolute;
    top: 50%;
    left: 50%;
  }
  
  .modal-mask.active .modal-content {
    transform: scale(1) translate(-50%, -50%);
  }
  
  .modal-header {
    padding: 40rpx 40rpx 20rpx;
    border-bottom: 1rpx solid #f0f0f0;
    text-align: center;
  }
  
  .modal-title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  .modal-info {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 10rpx;
  }
  
  .modal-body {
    padding: 30rpx 40rpx;
    max-height: 50vh;
    overflow-y: auto;
  }
  
  .modal-image {
    width: 100%;
    height: 300rpx;
    border-radius: 12rpx;
    margin-bottom: 30rpx;
    object-fit: cover;
  }

  .modal-text {
    font-size: 28rpx;
    line-height: 1.6;
    color: #333;
    text-align: justify;
    margin-bottom: 30rpx;
  }
  
  .modal-footer {
    padding: 30rpx 40rpx;
    display: flex;
    justify-content: center;
    gap: 30rpx;
    border-top: 1rpx solid #f0f0f0;
  }
  
  .btn {
    padding: 16rpx 40rpx;
    border-radius: 12rpx;
    font-size: 28rpx;
    min-width: 200rpx;
    border: none;
  }
  
  .btn-close {
    background-color: #cef1c6;
    color: #333;
  }
  
  .btn-close:active {
    background-color: #e0e0e0;
  }
  
  .btn-primary {
    background-color: #07c160;
    color: white;
  }
  
  .btn-primary:active {
    background-color: #06ae56;
  }

  /* 更多信息样式 */
.info-section {
    padding: 0 30rpx;
    margin-bottom: 40rpx;
  }
  
  .info-item {
    display: flex;
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 15rpx;
    padding: 30rpx;
    margin-top: 30rpx;
    box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease;
  }
  
  .info-item:active {
    transform: scale(0.98);
  }
  
  .info-image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 10rpx;
    margin-right: 30rpx;
    object-fit: cover;
  }
  
  .info-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .info-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #2C3E50;
    margin-bottom: 15rpx;
  }
  
  .info-desc {
    font-size: 26rpx;
    color: #7F8C8D;
    line-height: 1.5;
  }

/* 活动列表样式 */
.activity-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-top: 40rpx;
}

.activity-item {
  background-color: #f8f9fa;
  border-radius: 20rpx;
  padding: 0;
  overflow: hidden;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.activity-item:active {
  transform: scale(0.98);
}

/* 活动头部 - 白色背景容器包含图片和标题 */
.activity-header {
  background-color: #ffffff;
  padding: 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.activity-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
  object-fit: cover;
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C3E50;
  flex: 1;
}

/* 活动内容样式 */
.activity-content {
  padding: 30rpx;
}

.activity-date {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.activity-location {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.activity-desc {
  font-size: 26rpx;
  color: #7F8C8D;
  line-height: 1.5;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 下拉刷新提示 */
.refresh-tip {
  text-align: center;
  padding: 30rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
}

/* 报名按钮样式 */
.btn-signup {
  background-color: #07c160;
  color: white;
  padding: 16rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  min-width: 200rpx;
  border: none;
}

.btn-signup:active {
  background-color: #06ae56;
}

