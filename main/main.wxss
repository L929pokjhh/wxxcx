/* main.wxss */
.container {
    min-height: 100vh;
    background: linear-gradient(180deg, #87CEEB 0%, #98FB98 50%, #87CEEB 100%);
    padding-bottom: 120rpx; /* 为底部导航留空间 */
  }
  
  /* 搜索框样式 */
  .search-section {
    padding: 30rpx 30rpx 20rpx;
  }
  
  .search-bar {
    display: flex;
    align-items: center;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 25rpx;
    padding: 0 30rpx;
    height: 70rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  }
  
  .search-icon {
    margin-right: 20rpx;
    font-size: 32rpx;
    color: #999;
  }
  
  .search-input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
  }
  
  .clear-icon {
    margin-left: 20rpx;
    opacity: 0.6;
    font-size: 32rpx;
    color: #666;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    transition: all 0.2s ease;
  }
  
  .clear-icon:active {
    background-color: rgba(0, 0, 0, 0.1);
    opacity: 1;
  }
  
  /* 功能卡片样式 */
  .function-cards {
    padding: 20rpx 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .card-row {
    display: flex;
    justify-content: center;
    gap: 30rpx;
    margin-bottom: 30rpx;
    width: 100%;
  }
  
  .function-card {
    width: 320rpx;
    height: 160rpx;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
    transition: transform 0.2s ease;
  }
  
  .function-card:active {
    transform: scale(0.95);
  }
  
  .card-title {
    font-size: 36rpx;
    font-weight: bold;
    color: white;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  }
  
  /* 不同卡片的渐变背景 */
  .card-green-blue {
    background: linear-gradient(135deg, #98FB98 0%, #87CEEB 100%);
  }
  
  .card-blue {
    background: linear-gradient(135deg, #4FC3F7 0%, #2196F3 100%);
  }
  
  .card-blue-green {
    background: linear-gradient(135deg, #2196F3 0%, #4CAF50 100%);
  }
  
  .card-light-blue {
    background: linear-gradient(135deg, #81C784 0%, #64B5F6 100%);
  }
  
  /* 活动详情样式 */
  
  
  .activity-section {
    padding: 0 30rpx;
    margin-bottom: 40rpx;
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
  }
  
  .section-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #2C3E50;
  }
  
  .more-link {
    font-size: 24rpx;
    color: #7F8C8D;
  }
  
  .activity-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .first-section {
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 15rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease;
  }
  .first2:active {
    transform: scale(0.98);
  }
  
  
  
  
  
  
  
  /* 原WXML结构样式 */
  .second-section {
      background-color: rgba(255, 255, 255, 0.95);
    border-radius: 15rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease;
    }
    
    .second2:active { 
        transform: scale(0.98);
    }
    
    .activity-image {
      width: 100%;
    
      display: block;
    }
    
    .activity-title {
      display: block;
      padding: 30rpx;
      font-size: 36rpx;
      font-weight: bold;
      color: #333;
      text-align: center;
    }
    
    .hint-text {
      display: block;
      text-align: center;
      color: #999;
      font-size: 28rpx;
      margin-top: 20rpx;
    }
    
    /* 弹窗样式 */
    .modal-mask {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 1000;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
    }
    
    .modal-mask.active {
      opacity: 1;
      visibility: visible;
    }
    
    .modal-dialog {
      background-color: white;
      width: 85%;
      max-width: 600rpx;
      border-radius: 20rpx;
      overflow: hidden;
      box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
      transform: scale(0.7);
      transition: transform 0.3s ease;
    }
    
    .modal-mask.active .modal-dialog {
      transform: scale(1);
    }
    
    .modal-header {
      padding: 40rpx 40rpx 20rpx;
      text-align: center;
      border-bottom: 1rpx solid #f0f0f0;
    }
    
    .modal-title {
      font-size: 36rpx;
      font-weight: bold;
      color: #000;
      line-height: 1.4;
    }
    
    .modal-content {
      padding: 30rpx 40rpx 40rpx;
      text-align: left;
      line-height: 1.6;
    }
    
    .info-item {
      margin-bottom: 24rpx;
      display: flex;
    }
    
    .info-label {
      font-weight: bold;
      color: #333;
      width: 120rpx;
      flex-shrink: 0;
    }
    
    .info-text {
      color: #666;
      flex: 1;
    }
    
    .modal-text {
      color: #666;
      margin-top: 30rpx;
      font-size: 28rpx;
      line-height: 1.6;
      text-align: justify;
    }
    
    .modal-footer {
      padding: 0 40rpx 40rpx;
      display: flex;
      justify-content: space-between;
    }
    
    .modal-btn {
      padding: 20rpx 0;
      border: none;
      border-radius: 10rpx;
      font-size: 32rpx;
      flex: 1;
      margin: 0 10rpx;
      transition: all 0.2s;
    }
    
    .modal-btn:active {
      opacity: 0.8;
      transform: scale(0.98);
    }
    
    .btn-close {
      background-color: #f0f0f0;
      color: #333;
    }
    
    .btn-signup {
      background-color: #07C160;
      color: white;
    }
    
    /* 入会管理要求弹窗样式 */
    .agreement-modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 9999;
    }
    
    .agreement-modal .modal-mask {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
    }
    
    .agreement-modal .modal-content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 80%;
      max-width: 600rpx;
      background-color: white;
      border-radius: 20rpx;
      overflow: hidden;
      box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
    }
    
    .agreement-modal .modal-header {
      padding: 40rpx;
      text-align: center;
      border-bottom: 2rpx solid #f0f0f0;
    }
    
    .agreement-modal .modal-title {
      font-size: 36rpx;
      font-weight: bold;
      color: #2C3E50;
    }
    
    .agreement-modal .modal-body {
      padding: 40rpx;
    }
    
    .agreement-modal .agreement-content {
      height: 300rpx;
      margin-bottom: 40rpx;
      padding: 30rpx 30rpx 30rpx 10rpx;
    }
    
    .agreement-modal .agreement-text {
      font-size: 28rpx;
      line-height: 1.6;
      color: #7F8C8D;
      white-space: pre-line;
    }
    
    .agreement-modal .agreement-checkbox {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .agreement-modal .checkbox-label {
      font-size: 28rpx;
      color: #2C3E50;
      margin-left: 20rpx;
    }
    
    .agreement-modal .modal-footer {
      display: flex;
      justify-content: space-between;
      padding: 0 40rpx 40rpx;
      gap: 30rpx;
    }
    
    .agreement-modal .btn-cancel, .agreement-modal .btn-confirm {
      flex: 1;
      height: 80rpx;
      line-height: 80rpx;
      border-radius: 15rpx;
      font-size: 30rpx;
      font-weight: 500;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
    }
    
    .agreement-modal .btn-cancel {
      background-color: #f8f9fa;
      color: #6c757d;
      border: 2rpx solid #dee2e6;
    }
    
    .agreement-modal .btn-confirm {
      background-color: #5DADE2;
      color: white;
      border: none;
    }
    
    .agreement-modal .btn-confirm[disabled] {
      background-color: #bdc3c7;
      color: #95a5a6;
    }
    
    /* 报名表单样式 */
    .signup-dialog {
      max-width: 500rpx;
    }
    
    .form-item {
      margin-bottom: 30rpx;
      display: flex;
      align-items: center;
    }
    
    .form-label {
      font-weight: bold;
      color: #333;
      width: 120rpx;
      flex-shrink: 0;
    }
    
    .form-input {
      flex: 1;
      border: 1rpx solid #ddd;
      border-radius: 8rpx;
      padding: 20rpx;
      font-size: 28rpx;
    }
  
  
  
  
  
  
  
  
  
  
  
    
  
  
  /* 更多信息样式 */
  .info-section {
    padding: 0 30rpx;
    margin-bottom: 40rpx;
    background: transparent;
  }
  
  .info-item {
    display: flex;
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 15rpx;
    padding: 30rpx;
    margin-top: 30rpx;
    box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease;
  }
  
  .info-item:active {
    transform: scale(0.98);
  }
  
  .info-image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 10rpx;
    margin-right: 30rpx;
    object-fit: cover;
  }
  
  .info-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .info-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #2C3E50;
    margin-bottom: 15rpx;
  }
  
  .info-desc {
    font-size: 26rpx;
    color: #7F8C8D;
    line-height: 1.5;
  }
  
  /* 底部导航样式 */
  .bottom-nav-placeholder {
    height: 120rpx;
  }
  
  .bottom-navigation {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: white;
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 120rpx;
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
    z-index: 999;
  }
  
  .nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex: 1;
    height: 100%;
    transition: all 0.2s ease;
  }
  
  .nav-item:active {
    background-color: #f5f5f5;
  }
  
  .nav-icon {
    margin-bottom: 8rpx;
  }
  
  .nav-icon-custom {
    font-size: 48rpx;
    margin-bottom: 8rpx;
  }
  
  .nav-text {
    font-size: 22rpx;
    color: #666;
  }
  
  .nav-text.active {
    color: #2196F3;
    font-weight: 500;
  }
  
  .nav-active .nav-icon-custom {
    filter: hue-rotate(200deg) saturate(1.5);
  }
  
  /* 响应式调整 */
  @media (max-width: 750rpx) {
    .function-card {
      width: 300rpx;
      height: 140rpx;
    }
    
    .card-title {
      font-size: 32rpx;
    }
  }
  
  /* 动画效果 */
  .function-card {
    animation: fadeInUp 0.6s ease forwards;
  }
  
  .function-card:nth-child(1) {
    animation-delay: 0.1s;
  }
  
  .function-card:nth-child(2) {
    animation-delay: 0.2s;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30rpx);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .activity-item {
    animation: fadeIn 0.8s ease forwards;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  /* 秘书处弹窗样式 */
  .secretary-dialog {
    max-width: 550rpx;
  }
  
  .contact-info {
    padding: 20rpx 0;
  }
  
  .contact-item {
    margin-bottom: 20rpx;
    line-height: 1.6;
  }
  
  .contact-label {
    font-weight: bold;
    color: #2C3E50;
    font-size: 30rpx;
    display: block;
    margin-bottom: 8rpx;
  }
  
  .contact-detail {
    color: #7F8C8D;
    font-size: 26rpx;
    display: block;
    padding-left: 30rpx;
  }
  
  .contact-divider {
    height: 1rpx;
    background-color: #f0f0f0;
    margin: 30rpx 0;
  }
  
  /* 活动弹窗超链接样式 */
  .link-item {
    margin-top: 30rpx;
    padding-top: 20rpx;
    border-top: 1rpx solid #f0f0f0;
    display: flex;
    align-items: center;
  }
  
  .link-label {
    font-weight: bold;
    color: #333;
    font-size: 28rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
  }
  
  .activity-link {
    flex: 1;
    padding: 10rpx 0;
  }
  
  .link-text {
    color: #007AFF;
    font-size: 28rpx;
    text-decoration: underline;
  }
  
  .activity-link:active .link-text {
    color: #0056CC;
    opacity: 0.8;
  }
  
  /* 弹窗滚动区域样式 */
  .modal-scroll {
    max-height: 500rpx;
    padding-right: 10rpx;
    -webkit-overflow-scrolling: touch;
    overflow-anchor: none;
  }
  
  .modal-scroll::-webkit-scrollbar {
    width: 6rpx;
  }
  
  .modal-scroll::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 3rpx;
  }
  
  .modal-scroll::-webkit-scrollbar-thumb {
    background: #c1c1c1;
    border-radius: 3rpx;
  }
  
  .modal-scroll::-webkit-scrollbar-thumb:hover {
    background: #a8a8a8;
  }
  
  /* 阻止滚动事件冒泡 */
  .modal-scroll {
    touch-action: pan-y;
  }
  