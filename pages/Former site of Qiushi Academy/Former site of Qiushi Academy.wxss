/* pages/Former site of Qiushi Academy.wxss */
.container {
  padding: 0;
  background: rgba(255, 255, 255, 0.95);
  min-height: 100vh;
}

/* 页面头部 */
.header {
  text-align: center;
  padding: 80rpx 40rpx 60rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 40rpx;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #667eea, #764ba2, #f093fb);
}

.main-title {
  font-size: 52rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 24rpx;
  line-height: 1.3;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  background: rgba(0, 0, 0, 0.95);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.sub-title {
  font-size: 30rpx;
  color: #7f8c8d;
  line-height: 1.6;
  font-weight: 400;
  letter-spacing: 1rpx;
}

/* 内容区域 */
.content-section {
  padding: 0 40rpx 80rpx;
  display: flex;
  flex-direction: column;
  gap: 50rpx;
}

/* 模块样式 */
.module {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.12);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.module::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
}

.module:nth-child(2)::before {
  background: linear-gradient(90deg, #f093fb, #f5576c);
}

.module:nth-child(3)::before {
  background: linear-gradient(90deg, #4facfe, #00f2fe);
}

.module:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.18);
}

/* 模块标题 */
.module-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 20rpx;
}

.module-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 4rpx;
}

.module:nth-child(2) .module-title::before {
  background: linear-gradient(135deg, #f093fb, #f5576c);
}

.module:nth-child(3) .module-title::before {
  background: linear-gradient(135deg, #4facfe, #00f2fe);
}

/* 核心方向 */
.core-direction {
  font-size: 28rpx;
  color: #34495e;
  margin-bottom: 25rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.9);
  padding: 25rpx 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  line-height: 1.5;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.core-direction::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
  transition: left 0.5s ease;
}

.core-direction:hover::before {
  left: 100%;
}

.core-direction:hover {
  transform: translateY(-3rpx);
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.1);
  border-color: rgba(102, 126, 234, 0.3);
}

.module:nth-child(2) .core-direction {
  border-color: rgba(240, 147, 251, 0.1);
}

.module:nth-child(2) .core-direction:hover {
  border-color: rgba(240, 147, 251, 0.3);
}

.module:nth-child(3) .core-direction {
  border-color: rgba(79, 172, 254, 0.1);
}

.module:nth-child(3) .core-direction:hover {
  border-color: rgba(79, 172, 254, 0.3);
}

/* 模块内容 */
.module-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.content-item {
  font-size: 28rpx;
  color: #34495e;
  padding: 20rpx 25rpx 20rpx 50rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
  line-height: 1.6;
  text-align: left;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.content-item::before {
  content: '•';
  position: absolute;
  left: 25rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #667eea;
  font-size: 32rpx;
  font-weight: bold;
}

.content-item::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
  transition: left 0.5s ease;
}

.content-item:hover::after {
  left: 100%;
}

.content-item:hover {
  transform: translateY(-3rpx);
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.1);
  border-color: rgba(102, 126, 234, 0.3);
}

.module:nth-child(2) .content-item::before {
  color: #f093fb;
}

.module:nth-child(2) .content-item {
  border-color: rgba(240, 147, 251, 0.1);
}

.module:nth-child(2) .content-item:hover {
  border-color: rgba(240, 147, 251, 0.3);
}

.module:nth-child(3) .content-item::before {
  color: #4facfe;
}

.module:nth-child(3) .content-item {
  border-color: rgba(79, 172, 254, 0.1);
}

.module:nth-child(3) .content-item:hover {
  border-color: rgba(79, 172, 254, 0.3);
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .module-content {
    grid-template-columns: repeat(auto-fit, minmax(180rpx, 1fr));
    gap: 15rpx;
  }
  
  .content-item {
    padding: 20rpx 15rpx;
    font-size: 26rpx;
  }
}