/* alliance.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 160rpx;
}

/* 搜索框样式 */
.search-section {
  margin-bottom: 30rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.search-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.clear-icon {
  font-size: 24rpx;
  color: #ccc;
  margin-left: 20rpx;
  padding: 10rpx;
}

/* 联盟标题样式 */
.alliance-header {
  margin-bottom: 40rpx;
  text-align: left;
}

.alliance-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
}

/* 联盟图片样式 */
.alliance-images {
  margin-bottom: 50rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.image-container {
  width: 100%;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
}

.alliance-image {
  width: 100%;
  height: 400rpx;
  display: block;
}

/* 业务内容样式 */
.business-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 30rpx;
  display: block;
}

.business-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.business-card {
  padding: 40rpx 20rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 160rpx;
}

.business-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
}

.card-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
  display: block;
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  line-height: 1.4;
  text-align: center;
}

/* 底部导航样式 */
.bottom-nav-placeholder {
  height: 120rpx;
}

.bottom-navigation {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 1rpx solid #e0e0e0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  transition: all 0.3s ease;
}

.nav-item:active {
  transform: scale(0.95);
}

.nav-icon-custom {
  font-size: 44rpx;
  margin-bottom: 8rpx;
  color: #999;
  transition: color 0.3s ease;
}

.nav-text {
  font-size: 22rpx;
  color: #999;
  transition: color 0.3s ease;
}

.nav-item.nav-active .nav-icon-custom,
.nav-item.nav-active .nav-text {
  color: #87CEEB;
}

.nav-text.active {
  font-weight: bold;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .alliance-title {
    font-size: 42rpx;
  }
  
  .business-card {
    padding: 30rpx 15rpx;
    min-height: 140rpx;
  }
  
  .card-title {
    font-size: 26rpx;
  }
}

@media screen and (min-width: 768px) {
  .container {
    max-width: 750rpx;
    margin: 0 auto;
  }
  
  .business-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}
