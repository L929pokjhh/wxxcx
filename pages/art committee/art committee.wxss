/* 艺术专委会页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  padding: 20rpx;
}

.header {
  display: flex;
  align-items: center;
  padding: 40rpx 0;
  position: relative;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.back-icon {
  font-size: 32rpx;
  color: #333;
  margin-right: 10rpx;
}

.back-text {
  font-size: 28rpx;
  color: #333;
}

.title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.content {
  margin-top: 40rpx;
}

.committee-info {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.info-card, .contact-info {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.info-title, .contact-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2C3E50;
  margin-bottom: 20rpx;
}

.info-content, .contact-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #7F8C8D;
}

.contact-item {
  display: flex;
  margin-top: 15rpx;
}

.contact-label {
  font-weight: bold;
  color: #2C3E50;
  min-width: 120rpx;
}

.contact-value {
  color: #3498db;
}

/* 联系我们按钮样式 */
.contact-section {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1000;
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 0 40rpx;
}

.contact-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 25rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
}

.contact-btn:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(79, 172, 254, 0.2);
}