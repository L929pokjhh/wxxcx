/* pages/ai-committee/ai-committee.wxss */

.container {
    background-color: #f5f5f5;
    min-height: 100vh;
    padding: 20rpx;
    box-sizing: border-box;
  }
  
  /* 头部样式 */
  .header {
    background: linear-gradient(135deg, #87CEEB, #87CEEB);
    color: white;
    padding: 30rpx;
    border-radius: 16rpx;
    text-align: center;
    margin-bottom: 30rpx;
    box-shadow: 0 4rpx 12rpx rgba(248, 247, 246, 0.3);
  }
  
  .header .title {
    font-size: 36rpx;
    font-weight: 600;
    margin-bottom: 10rpx;
    line-height: 1.4;
  }
  
  .header .date {
    font-size: 26rpx;
    opacity: 0.9;
  }
  
  /* 部分样式 */
  .section {
    background-color: white;
    border-radius: 16rpx;
    margin-bottom: 30rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: 600;
    margin-bottom: 20rpx;
    color: #87CEEB;
    display: flex;
    align-items: center;
    padding-bottom: 15rpx;
    border-bottom: 2rpx solid #f0f0f0;
  }
  
  .section-title .icon {
    margin-right: 15rpx;
    font-size: 36rpx;
  }
  
  /* 子部分样式 */
  .subsection {
    margin-bottom: 40rpx;
  }
  
  .subsection:last-child {
    margin-bottom: 0;
  }
  
  .subsection-title {
    font-size: 28rpx;
    font-weight: 600;
    margin-bottom: 20rpx;
    color: #87CEEB;
    padding-left: 15rpx;
    border-left: 4rpx solid #87CEEB;
    background-color: #ffffff;
    padding: 12rpx 15rpx;
    border-radius: 8rpx;
  }
  
  /* 表格样式 */
  .table {
    width: 100%;
    border: 2rpx solid #e0e0e0;
    border-radius: 12rpx;
    overflow: hidden;
    margin-bottom: 20rpx;
  }
  
  .table-header {
    display: flex;
    background-color: #f9f9f9;
    border-bottom: 2rpx solid #e0e0e0;
    font-weight: 600;
    justify-content: center;
    align-items: center;
  }
  
  .table-row {
    display: flex;
    border-bottom: 2rpx solid #e0e0e0;
    padding: 20rpx 0;
  }
  
  .table-row:last-child {
    border-bottom: none;
  }
  
  .col-1, .col-2, .col-3, .col-4 {
    padding: 0 15rpx;
    word-break: break-all;
    display: flex;
    align-items: flex-start;
  }
  
  .col-1 {
    width: 20%;
    border-right: 2rpx solid #e0e0e0;
    justify-content: center;
  }
  
  .col-2 {
    width: 25%;
    border-right: 2rpx solid #e0e0e0;
    padding-left: 20rpx;
    padding-right: 20rpx;
  }
  
  .col-3 {
    width: 45%;
    border-right: 2rpx solid #e0e0e0;
    padding-left: 20rpx;
    padding-right: 20rpx;
    justify-content: center;
    align-items: center;
  }
  
  .col-4 {
    width: 10%;
    text-align: center;
    justify-content: center;
  }
  
  /* 服务类别样式 */
  .service-category .col-1 {
    font-weight: 600;
    color: #87CEEB;
    background-color: #fcfcfc;
    padding: 10rpx 15rpx;
    margin: -10rpx 0;
    border-radius: 6rpx;
  }
  
  /* 课程项样式 */
  .course-item {
    margin-bottom: 0;
    padding: 8rpx 15rpx;
    background-color: transparent;
    border-radius: 0;
    border: none;
    font-size: 24rpx;
    color: #333;
    white-space: nowrap;
    line-height: 1.3;
  }
  
  .course-item:before {
    content: none;
  }

  /* 培训课程表格样式 */
  .training-table {
    width: 100%;
    border: 2rpx solid #e0e0e0;
    border-radius: 12rpx;
    overflow: hidden;
    margin-bottom: 20rpx;
    background-color: white;
  }
  
  .training-header {
    display: flex;
    background: linear-gradient(135deg, #ffffff, #ffffff);
    color: white;
    font-weight: 600;
    border-bottom: 2rpx solid #e0e0e0;
  }
  
  .training-row {
    display: flex;
    border-bottom: 2rpx solid #f0f0f0;
    padding: 25rpx 0;
    align-items: flex-start;
  }
  
  .training-row:last-child {
    border-bottom: none;
  }
  
  .training-col {
    padding: 0 20rpx;
    word-break: break-all;
    display: flex;
    align-items: flex-start;
    min-height: 40rpx;
  }
  
  .training-col-1 {
    width: 15%;
    border-right: 2rpx solid #e0e0e0;
    justify-content: center;
    align-items: center;
    font-weight: 600;
    color: #000000;
  }
  
  .training-col-2 {
    width: 25%;
    border-right: 2rpx solid #e0e0e0;
    font-weight: 600;
    color: #333;
  }
  
  .training-col-3 {
    width: 45%;
    border-right: 2rpx solid #e0e0e0;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 15rpx;
    align-items: flex-start;
    color: #000000;
  }
  
  .training-col-4 {
    width: 15%;
    justify-content: center;
    align-items: center;
    font-weight: 600;
    color: #000000;
  }
  
  .training-header .training-col {
    justify-content: center;
    align-items: center;
    padding: 20rpx;
    font-size: 28rpx;
  }

  /* 联系我们按钮样式 */
  .contact-section {
    position: fixed;
    bottom: 40rpx;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 0 40rpx;
  }

  .contact-btn {
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    color: #ffffff;
    border: none;
    border-radius: 50rpx;
    padding: 24rpx 60rpx;
    font-size: 32rpx;
    font-weight: bold;
    box-shadow: 0 8rpx 25rpx rgba(79, 172, 254, 0.3);
    transition: all 0.3s ease;
  }

  .contact-btn:active {
    transform: translateY(2rpx) scale(0.98);
    box-shadow: 0 4rpx 15rpx rgba(79, 172, 254, 0.2);
  }

  /* 页脚样式 */
  .footer {
    text-align: center;
    padding: 30rpx;
    color: #999;
    font-size: 24rpx;
    margin-top: 20rpx;
    margin-bottom: 120rpx;
  }
  
  /* 响应式设计 */
  @media (max-width: 750rpx) {
    .container {
      padding: 10rpx;
    }
    
    .section {
      padding: 20rpx;
    }
    
    .col-1, .col-2, .col-3, .col-4 {
      padding: 0 10rpx;
      font-size: 24rpx;
    }
    
    .col-2, .col-3 {
      padding-left: 15rpx;
      padding-right: 15rpx;
    }
    
    .header .title {
      font-size: 32rpx;
    }
    
    .section-title {
      font-size: 30rpx;
    }
    
    .subsection-title {
      font-size: 26rpx;
    }
    
    /* 在小屏幕上调整列宽 */
    .col-1 {
      width: 25%;
    }
    
    .col-2 {
      width: 30%;
    }
    
    .col-3 {
      width: 45%;
    }
  }