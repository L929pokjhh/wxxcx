  /* 空状态样式 */
  .empty-state {
    text-align: center;
    padding: 100rpx 40rpx;
  }
  
  .empty-text {
    font-size: 32rpx;
    color: #999;
    margin-bottom: 40rpx;
    display: block;
  }
  
  .reset-btn {
    background: linear-gradient(135deg, #87CEEB, #4a90e2);
    color: #ffffff;
    padding: 20rpx 40rpx;
    border-radius: 50rpx;
    font-size: 28rpx;
    font-weight: bold;
    box-shadow: 0 6rpx 20rpx rgba(135, 206, 235, 0.3);
  }
  
  .reset-btn:active {
    transform: translateY(2rpx);
    box-shadow: 0 4rpx 15rpx rgba(135, 206, 235, 0.2);
  }
  
  /* 联系我们按钮样式 */
  .contact-section {
    position: fixed;
    bottom: 40rpx;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 0 40rpx;
  }

  .contact-btn {
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    color: #ffffff;
    border: none;
    border-radius: 50rpx;
    padding: 24rpx 60rpx;
    font-size: 32rpx;
    font-weight: bold;
    box-shadow: 0 8rpx 25rpx rgba(79, 172, 254, 0.3);
    transition: all 0.3s ease;
  }

  .contact-btn:active {
    transform: translateY(2rpx) scale(0.98);
    box-shadow: 0 4rpx 15rpx rgba(79, 172, 254, 0.2);
  }

  /* 底部占位 */
  .bottom-placeholder {
    height: 120rpx;
  }
  
  /* 响应式适配 */
  @media screen and (max-width: 375px) {
    .committee-card {
      padding: 40rpx 20rpx;
      min-height: 100rpx;
    }
    
    .committee-name {
      font-size: 26rpx;
    }
  }
  
  @media screen and (min-width: 768px) {
    .container {
      max-width: 750rpx;
      margin: 0 auto;
    }
    
    .committee-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  /* 特殊样式优化 */
  .committee-card {
    overflow: hidden;
    backdrop-filter: blur(10rpx);
  }
  
  .committee-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: inherit;
    opacity: 0.9;
    z-index: -1;
  }
  
  /* 动画效果 */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20rpx);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .committee-card {
    animation: fadeIn 0.5s ease-out;
  }
  
  /* 长文本专委会名称优化 */
  .committee-card:nth-child(2) .committee-name,
  .committee-card:nth-child(4) .committee-name,
  .committee-card:nth-child(5) .committee-name,
  .committee-card:nth-child(7) .committee-name,
  .committee-card:nth-child(9) .committee-name,
  .committee-card:nth-child(10) .committee-name,
  .committee-card:nth-child(11) .committee-name,
  .committee-card:nth-child(12) .committee-name {
    font-size: 26rpx;
    line-height: 1.3;
  }
  