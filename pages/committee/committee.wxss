/* committee.wxss */
.container {
    padding: 20rpx;
    background-color: #f8f9fa;
    min-height: 100vh;
    padding-bottom: 100rpx;
  }
  
  /* 搜索框样式 */
  .search-section {
    margin-bottom: 30rpx;
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  .search-bar {
    display: flex;
    align-items: center;
    background-color: #ffffff;
    border-radius: 50rpx;
    padding: 20rpx 30rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    position: relative;
  }
  
  .search-icon {
    font-size: 32rpx;
    color: #999;
    margin-right: 20rpx;
  }
  
  .search-input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
  }
  
  .clear-icon {
    font-size: 24rpx;
    color: #ccc;
    margin-left: 20rpx;
    padding: 10rpx;
  }
  
  /*功能卡片*/
  .function-cards {
      padding: 20rpx 30rpx;
    }
    
    .card-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 30rpx;
    }
    
    .function-card {
      width: 100%;
      height: 160rpx;
      border-radius: 20rpx;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
      transition: transform 0.2s ease;
    }
    
    .function-card:active {
      transform: scale(0.95);
    }
    
    .card-title {
      font-size: 36rpx;
      font-weight: bold;
      color: white;
      text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
      text-align: center;
    }
    
  /* 专委会网格样式 background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%); */ 
