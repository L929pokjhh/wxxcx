<!--pages/example/index.wxml-->
<view class="container">
  <view class="header">
    <text class="title">{{title}}</text>
  </view>
  
  <view class="content">
    <text class="description">{{content}}</text>
  </view>

  <view class="features">
    <text class="subtitle">功能特性：</text>
    <view class="feature-item">
      <text>• 响应式布局设计</text>
    </view>
    <view class="feature-item">
      <text>• 现代化UI界面</text>
    </view>
    <view class="feature-item">
      <text>• 完整的页面生命周期</text>
    </view>
  </view>

  <view class="actions">
    <button class="btn-primary" bindtap="goHome">返回首页</button>
  </view>
</view>
