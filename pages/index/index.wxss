/* index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #87CEEB 0%, #98FB98 50%, #87CEEB 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
}

.header {
  text-align: center;
  padding: 100rpx 50rpx 50rpx;
  width: 100%;
}

.logo-text {
  font-size: 56rpx;
  font-weight: bold;
  color: #2C3E50;
  text-shadow: 2rpx 2rpx 4rpx rgba(255, 255, 255, 0.8);
}

.subtitle {
  font-size: 28rpx;
  color: #34495E;
  margin-top: 20rpx;
  opacity: 0.8;
}

.content {
  flex: 1;
  width: 100%;
  padding: 0 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome-card {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 60rpx;
  width: 100%;
  max-width: 600rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2C3E50;
  text-align: center;
  margin-bottom: 30rpx;
}

.card-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #7F8C8D;
  text-align: center;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
  margin-bottom: 80rpx;
  width: 100%;
  max-width: 500rpx;
}

.register-btn, .info-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 25rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.register-btn {
  background-color: #5DADE2;
  color: white;
  border: none;
}

.info-btn {
  background-color: rgba(255, 255, 255, 0.9);
  color: #2C3E50;
  border: 2rpx solid #BDC3C7;
}

.features {
  display: flex;
  justify-content: space-between;
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 50rpx;
}

.feature-item {
  flex: 1;
  text-align: center;
  padding: 0 20rpx;
}

.feature-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2C3E50;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 22rpx;
  color: #7F8C8D;
  line-height: 1.4;
}

.footer {
  padding: 50rpx;
  text-align: center;
}

.footer text {
  font-size: 24rpx;
  color: #95A5A6;
}

/* 入会管理要求告知窗口样式 */
.agreement-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  padding: 40rpx;
  text-align: center;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2C3E50;
}

.modal-body {
  padding: 40rpx;
}

.agreement-content {
    height: 300rpx;
    margin-bottom: 40rpx;
    padding: 30rpx 30rpx 30rpx 10rpx;
}

.agreement-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #7F8C8D;
  white-space: pre-line;
}

.agreement-checkbox {
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox-label {
  font-size: 28rpx;
  color: #2C3E50;
  margin-left: 20rpx;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx 40rpx;
  gap: 30rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.btn-cancel {
  background-color: #f8f9fa;
  color: #6c757d;
  border: 2rpx solid #dee2e6;
}

.btn-confirm {
  background-color: #5DADE2;
  color: white;
  border: none;
}

.btn-confirm[disabled] {
  background-color: #bdc3c7;
  color: #95a5a6;
}
