/* transform.wxss */

/* ===== 基础样式 ===== */
.container {
    padding: 0;
    background: rgba(255, 255, 255, 0.95);
    min-height: 100vh;
    padding-bottom: 100rpx;
  }
  
  /* ===== 科技成果转化中心介绍 ===== */
  .tech-center-section {
    margin-bottom: 40rpx;
  }
  
  /* 页面头部 */
  .header {
    text-align: center;
    padding: 60rpx 30rpx 40rpx;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 0 0 30rpx 30rpx;
    box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.15);
    margin-bottom: 40rpx;
    position: relative;
    overflow: hidden;
    max-width: 85%;
    margin-left: auto;
    margin-right: auto;
  }
  
  .header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6rpx;
    background: linear-gradient(90deg, #667eea, #764ba2, #f093fb);
  }
  
  .main-title {
    font-size: 52rpx;
    font-weight: bold;
    color: #2c3e50;
    margin-bottom: 24rpx;
    line-height: 1.3;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
    background: linear-gradient(135deg, #000000, #000000);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    max-width: 80%;
    margin-left: auto;
    margin-right: auto;
  }
  
  .sub-title {
    font-size: 30rpx;
    color: #7f8c8d;
    line-height: 1.6;
    font-weight: 400;
    letter-spacing: 1rpx;
  }
  
  /* 内容区域 */
  .content-section {
    padding: 0 40rpx 40rpx;
    display: flex;
    flex-direction: column;
    gap: 40rpx;
  }
  
  /* 模块样式 */
  .module {
    background: rgba(255, 255, 255, 0.98);
    border-radius: 24rpx;
    padding: 40rpx;
    box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.12);
    border: 1rpx solid rgba(255, 255, 255, 0.3);
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  
  .module::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 8rpx;
    background: linear-gradient(90deg, #667eea, #764ba2);
  }
  
  .module:nth-child(2)::before {
    background: linear-gradient(90deg, #f093fb, #f5576c);
  }
  
  .module:nth-child(3)::before {
    background: linear-gradient(90deg, #4facfe, #00f2fe);
  }
  
  .module:hover {
    transform: translateY(-5rpx);
    box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.18);
  }
  
  /* 模块标题 */
  .module-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #2c3e50;
    margin-bottom: 24rpx;
    position: relative;
    padding-left: 20rpx;
  }
  
  .module-title::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 8rpx;
    height: 32rpx;
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 4rpx;
  }
  
  .module:nth-child(2) .module-title::before {
    background: linear-gradient(135deg, #f093fb, #f5576c);
  }
  
  .module:nth-child(3) .module-title::before {
    background: linear-gradient(135deg, #4facfe, #00f2fe);
  }
  
  /* 模块内容 */
  .module-content {
    display: flex;
    flex-direction: column;
    gap: 15rpx;
  }
  
  .content-item {
    font-size: 28rpx;
    color: #34495e;
    padding: 20rpx 25rpx 20rpx 50rpx;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 12rpx;
    border: 1rpx solid rgba(102, 126, 234, 0.1);
    line-height: 1.6;
    text-align: left;
    font-weight: 500;
    transition: all 0.3s ease;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
    position: relative;
    overflow: hidden;
  }
  
  .content-item::before {
    content: '•';
    position: absolute;
    left: 25rpx;
    top: 50%;
    transform: translateY(-50%);
    color: #667eea;
    font-size: 32rpx;
    font-weight: bold;
  }
  
  .content-item::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
    transition: left 0.5s ease;
  }
  
  .content-item:hover::after {
    left: 100%;
  }
  
  .content-item:hover {
    transform: translateY(-3rpx);
    box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.1);
    border-color: rgba(102, 126, 234, 0.3);
  }
  
  /* 模块颜色变量 */
  .module:nth-child(2) .content-item::before { color: #f093fb; }
  .module:nth-child(2) .content-item { border-color: rgba(240, 147, 251, 0.1); }
  .module:nth-child(2) .content-item:hover { border-color: rgba(240, 147, 251, 0.3); }
  
  .module:nth-child(3) .content-item::before { color: #4facfe; }
  .module:nth-child(3) .content-item { border-color: rgba(79, 172, 254, 0.1); }
  .module:nth-child(3) .content-item:hover { border-color: rgba(79, 172, 254, 0.3); }
  
  /* ===== 通用组件样式 ===== */
  
  /* 搜索框样式 */
  .search-section {
    margin-bottom: 30rpx;
  }
  
  .search-bar {
    display: flex;
    align-items: center;
    background-color: #ffffff;
    border-radius: 50rpx;
    padding: 20rpx 30rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  }
  
  .search-icon {
    font-size: 32rpx;
    color: #999;
    margin-right: 20rpx;
  }
  
  .search-input {
    flex: 1;
    font-size: 28rpx;
    color: #333;
  }
  
  .clear-icon {
    font-size: 24rpx;
    color: #ccc;
    margin-left: 20rpx;
    padding: 10rpx;
  }
  
  /* 通用区块样式 */
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
    width: 90%;
    margin-left: auto;
    margin-right: auto;
  }
  
  .section-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #2c3e50;
  }
  
  .more-link {
    font-size: 28rpx;
    color: #87CEEB;
    font-weight: 500;
  }
  
  /* ===== 内容区块样式 ===== */
  
  /* 最新消息样式 */
  .news-section {
    margin-bottom: 40rpx;
  }
  
  .news-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .news-card {
    position: relative;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
    transition: all 0.3s ease;
  }
  
  .news-card:active {
    transform: translateY(2rpx);
    box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  }
  
  .news-image {
    width: 100%;
    height: 400rpx;
    display: block;
  }
  
  .news-tag {
      position: absolute;
      bottom: 20rpx;
      right: 20rpx;
      background: rgba(0, 0, 0, 0.7);
      color: #ffffff;
      padding: 10rpx 20rpx;
      border-radius: 20rpx;
      font-size: 24rpx;
      font-weight: bold;
      backdrop-filter: blur(10rpx);
    }
  
  /* 科技成果展示样式 */
  .achievement-section {
    margin-bottom: 40rpx;
  }
  
  .achievement-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .achievement-card {
    display: flex;
    background-color: #ffffff;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    width: 90%;
    margin: 0 auto;
  }
  
  .achievement-card:active {
    transform: translateY(2rpx);
    box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  }
  
  .achievement-image {
    width: 220rpx;
    height: 176rpx;
    flex-shrink: 0;
    display: block;
    margin-top: 30rpx;
    margin-left: 15rpx;
  }
  
  .achievement-content {
    flex: 1;
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .achievement-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #2c3e50;
    margin-bottom: 10rpx;
    line-height: 1.3;
  }
  
  .achievement-description {
    font-size: 26rpx;
    color: #666;
    line-height: 1.5;
    margin-bottom: 15rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .achievement-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 10rpx;
    }
    
    .tag {
      background-color: #e3f2fd;
      color: #1976d2;
      padding: 6rpx 12rpx;
      border-radius: 20rpx;
      font-size: 20rpx;
      font-weight: 500;
    }
    
  
  /* ===== 辅助样式 ===== */
  
  /* 底部占位 */
  .bottom-placeholder {
    height: 40rpx;
  }
  
  /* 加载状态优化 */
  .news-image,
  .achievement-image {
    background-color: #f5f5f5;
    transition: opacity 0.3s ease;
  }
  
  .news-image[src=""],
  .achievement-image[src=""] {
    opacity: 0.5;
  }
  
  /* ===== 动画效果 ===== */
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30rpx);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .news-card,
  .achievement-card {
    animation: fadeInUp 0.6s ease-out;
  }
  
  .news-card:nth-child(2) {
    animation-delay: 0.1s;
  }
  
  .achievement-card:nth-child(2) {
    animation-delay: 0.2s;
  }
  
  /* ===== 响应式适配 ===== */
  
  @media screen and (max-width: 375px) {
    .achievement-image {
      width: 160rpx;
      height: 120rpx;
    }
    
    .achievement-content {
      padding: 15rpx;
    }
    
    .achievement-title {
      font-size: 28rpx;
    }
    
    .achievement-description {
      font-size: 24rpx;
    }
  }
  
  @media screen and (min-width: 768px) {
    .container {
      max-width: 750rpx;
      margin: 0 auto;
    }
    
    .news-list {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20rpx;
    }
  }
  
  /* 科技成果详情弹窗样式 */
  .modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }
  
  .modal-mask.active {
    opacity: 1;
    visibility: visible;
  }
  
  .modal-dialog {
    background-color: #ffffff;
    border-radius: 24rpx;
    width: 85vw;
    max-width: 650rpx;
    max-height: 80vh;
    overflow: hidden;
    transform: translateY(50rpx);
    transition: transform 0.3s ease;
  }
  
  .modal-mask.active .modal-dialog {
    transform: translateY(0);
  }
  
  .modal-header {
    padding: 30rpx;
    border-bottom: 2rpx solid #f0f0f0;
    text-align: center;
  }
  
  .modal-title {
    font-size: 36rpx;
    font-weight: bold;
    color: #2c3e50;
    line-height: 1.4;
  }
  
  .modal-content {
    padding: 0;
    max-height: 60vh;
    overflow: hidden;
  }
  
  .modal-scroll {
    max-height: 60vh;
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .modal-image {
    width: 90%;
    height: 300rpx;
    border-radius: 12rpx;
    margin-bottom: 25rpx;
    background-color: #f5f5f5;
  }
  
  .modal-description {
    margin-bottom: 25rpx;
    padding: 0 20rpx;
    text-align: left;
    width: 90%;
  }
  
  .description-text {
    font-size: 28rpx;
    color: #333;
    line-height: 1.6;
    text-align: left;
    max-width: 100%;
    display: block;
    margin: 0;
  }
  
  .achievement-unit {
    margin-bottom: 25rpx;
    padding: 15rpx 20rpx;
    background-color: #f0f8ff;
    border-radius: 12rpx;
    border-left: 4rpx solid #1976d2;
    width: 90%;
    text-align: left;
  }
  
  .unit-label {
    font-size: 26rpx;
    font-weight: bold;
    color: #1976d2;
    margin-right: 10rpx;
  }
  
  .unit-text {
    font-size: 26rpx;
    color: #333;
    font-weight: 500;
  }
  
  .achievement-tags {
      margin-bottom: 25rpx;
    }
  
  .contact-info {
    padding: 20rpx;
    background-color: #f8f9fa;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
    width: 90%;
    text-align: center;
  }
  
  .achievement-tags {
    margin-bottom: 25rpx;
  }
  
  .contact-info {
    padding: 20rpx;
    background-color: #f8f9fa;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
  }
  
  .contact-label {
    font-size: 26rpx;
    font-weight: bold;
    color: #2c3e50;
    margin-bottom: 10rpx;
    display: block;
  }
  
  .contact-text {
    font-size: 26rpx;
    color: #666;
    line-height: 1.5;
  }
  
  .modal-footer {
    padding: 20rpx 30rpx;
    border-top: 2rpx solid #f0f0f0;
    display: flex;
    gap: 20rpx;
  }
  
  .modal-btn {
    flex: 1;
    height: 80rpx;
    border: none;
    border-radius: 40rpx;
    font-size: 28rpx;
    font-weight: 500;
    transition: all 0.3s ease;
  }
  
  .btn-close {
    background-color: #f0f0f0;
    color: #666;
  }
  
  .btn-close:active {
    background-color: #e0e0e0;
  }
  
  .btn-contact {
    background-color: #1976d2;
    color: #ffffff;
  }
  
  .btn-contact:active {
    background-color: #1565c0;
  }
  
  /* 弹窗滚动条样式 */
  .modal-scroll::-webkit-scrollbar {
    width: 6rpx;
  }
  
  .modal-scroll::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 3rpx;
  }
  
  .modal-scroll::-webkit-scrollbar-thumb {
    background: #c1c1c1;
    border-radius: 3rpx;
  }
  
  .modal-scroll::-webkit-scrollbar-thumb:hover {
    background: #a8a8a8;
  }
  